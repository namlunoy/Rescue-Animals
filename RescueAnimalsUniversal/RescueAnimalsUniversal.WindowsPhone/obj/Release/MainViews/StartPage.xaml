<Page
    x:Class="RescueAnimalsUniversal.MainViews.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RescueAnimalsUniversal.MainViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot">
        <MediaElement x:Name="sound" Source="/sounds/background.wav" AutoPlay="True" Volume="50" IsLooping="True" />

        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" Source="ms-appx:///images/backgrounds/main.jpg"/>
        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Source="ms-appx:///images/systems/mainbutton.png" Margin="183,122,0,-14" Height="292" Width="231"/>
        <Image x:ConnectionId='1' HorizontalAlignment="Left"  VerticalAlignment="Top"  Source="ms-appx:///images/systems/startbutton.png" Margin="201.552,179.71,0,0" Height="56" Width="186.089" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"                        >
            <Image.RenderTransform>
                <CompositeTransform Rotation="-1.759"/>
            </Image.RenderTransform>
        </Image>
        <Image x:ConnectionId='2' HorizontalAlignment="Left" Height="43.605" Margin="232.89,231.353,0,0" VerticalAlignment="Top" Width="120.937" Source="ms-appx:///images/systems/quitbutton copy.png" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"                        >
            <Image.RenderTransform>
                <CompositeTransform Rotation="4.764"/>
            </Image.RenderTransform>
        </Image>
        <Image x:ConnectionId='3' HorizontalAlignment="Left" Height="36.743" Margin="226.565,148.78,0,0" VerticalAlignment="Top" Width="127.903" Source="ms-appx:///images/systems/highscore.png" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"                      >
            <Image.RenderTransform>
                <CompositeTransform Rotation="-6.744"/>
            </Image.RenderTransform>
        </Image>

        <!--<Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
